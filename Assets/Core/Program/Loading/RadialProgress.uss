    .radial-progress {
    min-width: 26px;
    min-height: 20px;
    --track-color: rgba(0, 0, 0, 0.3);
    --progress-color: rgb(0, 0, 0);
    --percentage-color: white;
    margin-left: 5px;
    margin-right: 5px;
    margin-top: 5px;
    margin-bottom: 5px;
    flex-direction: row;
    justify-content: center;
    width: 120px; 
    height: 120px;
}

.radial-progress__label {
    -unity-text-align: middle-left;
    color: var(--percentage-color);
}